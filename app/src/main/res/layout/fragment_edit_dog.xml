<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lilac_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editdogs.EditDogFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_picture_layout"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/profile_picture"
            android:src="@drawable/ic_default_dog_profile"
            android:background="@drawable/default_profile_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <ImageView
            android:id="@+id/add_profile_picture"
            android:src="@drawable/ic_add"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="@id/profile_picture"
            app:layout_constraintRight_toRightOf="@id/profile_picture" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dog_name_layout"
        android:hint="@string/name"
        style="@style/DogWalker.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/profile_picture_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dog_breed_layout"
        android:hint="@string/dog_breed"
        style="@style/DogWalker.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dog_name_layout"
        app:layout_constraintLeft_toRightOf="@id/profile_picture_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dog_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/birth_date_layout"
        android:hint="@string/birth_date"
        style="@style/DogWalker.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dog_breed_layout"
        app:layout_constraintLeft_toRightOf="@id/profile_picture_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/birth_date"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/save_dog"
        android:text="@string/save_dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/birth_date_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>