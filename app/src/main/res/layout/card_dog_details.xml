<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:cardBackgroundColor="@color/off_white"
    tools:cardCornerRadius="10dp"
    tools:cardElevation="5dp"
    tools:cardUseCompatPadding="true"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/dog_more_button"
            android:src="@drawable/ic_more"
            android:background="@color/transparent"
            android:visibility="invisible"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <ImageView
            android:id="@+id/dog_profile_picture"
            android:src="@drawable/dog_default_picture"
            android:layout_margin="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <LinearLayout
            android:id="@+id/top_layout"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="@id/dog_profile_picture"
            app:layout_constraintBottom_toBottomOf="@id/dog_profile_picture"
            app:layout_constraintRight_toLeftOf="@id/dog_more_button"
            app:layout_constraintLeft_toRightOf="@id/dog_profile_picture">
            <TextView
                android:id="@+id/dog_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/dog_breed_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/dog_breed"
                    android:text="@string/no_answer"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/dog_age_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/dog_age"
                    android:text="@string/no_answer"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/dog_about_me_title"
            android:text="@string/about_me_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dog_profile_picture" />
        <TextView
            android:id="@+id/dog_about_me"
            android:text="@string/no_answer"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dog_about_me_title"
            app:layout_constraintTop_toBottomOf="@id/dog_profile_picture" />
        <TextView
            android:id="@+id/dog_training_title"
            android:text="@string/dog_training_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dog_about_me" />
        <TextView
            android:id="@+id/dog_training"
            android:text="@string/no_answer"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dog_training_title"
            app:layout_constraintTop_toBottomOf="@id/dog_about_me" />
        <TextView
            android:id="@+id/dog_walk_length_title"
            android:text="@string/dog_walk_length_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dog_training" />
        <TextView
            android:id="@+id/dog_walk_length"
            android:text="@string/no_answer"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dog_walk_length_title"
            app:layout_constraintTop_toBottomOf="@id/dog_training" />
        <TextView
            android:id="@+id/dog_needs_title"
            android:text="@string/dog_needs_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dog_walk_length" />
        <TextView
            android:id="@+id/dog_needs"
            android:text="@string/no_answer"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dog_needs_title"
            app:layout_constraintTop_toBottomOf="@id/dog_walk_length" />
        <TextView
            android:id="@+id/dog_requirements_title"
            android:text="@string/dog_requirements_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dog_needs" />
        <TextView
            android:id="@+id/dog_requirements"
            android:text="@string/no_answer"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dog_requirements_title"
            app:layout_constraintTop_toBottomOf="@id/dog_needs" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>