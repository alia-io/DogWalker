<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewprofile.ViewProfileActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/toolbar"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/DogWalker.ActionBar.Menu"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/logo_transparent"
                    android:layout_margin="3sp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/user_display_name"
                    android:textColor="@color/slate_blue"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:textSize="24sp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:id="@+id/user_profile_picture"
            android:src="@drawable/user_default_picture"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="5dp"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />
        <FrameLayout
            android:id="@+id/active_user"
            android:background="@drawable/active_background"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/user_profile_picture"
            app:layout_constraintRight_toRightOf="@id/user_profile_picture"
            app:layout_constraintTop_toBottomOf="@id/user_profile_picture"
            app:layout_constraintBottom_toBottomOf="@id/user_profile_picture">
            <TextView
                android:text="@string/active"
                android:textStyle="bold"
                android:textColor="@color/off_white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <ImageView
            android:id="@+id/request_walk_button"
            android:src="@drawable/request_walk"
            android:background="@color/bright_green"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_width="60dp"
            android:layout_height="75dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />
        <RelativeLayout
            android:id="@+id/user_type"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/request_walk_button"
            app:layout_constraintLeft_toRightOf="@id/user_profile_picture"
            app:layout_constraintRight_toLeftOf="@id/request_walk_button"
            app:layout_constraintBottom_toBottomOf="@id/request_walk_button">
            <TextView
                android:id="@+id/dog_owner"
                android:text="@string/bullet_dog_owner"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/reddish_purple"
                android:visibility="gone"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dog_walker"
                android:text="@string/bullet_dog_walker"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/reddish_purple"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dog_owner" />
        </RelativeLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/user_profile_picture"
            app:layout_constraintTop_toBottomOf="@id/request_walk_button">
            <Button
                android:id="@+id/add_contact"
                android:text="@string/add_contact_button"
                android:onClick="addContact"
                android:background="@drawable/button_style"
                android:textColor="@color/dark_maroon"
                android:textSize="16sp"
                android:textAllCaps="false"
                tools:ignore="UsingOnClickInXml"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/send_message"
                android:text="@string/send_message_button"
                android:onClick="sendMessage"
                android:background="@drawable/button_style"
                android:textColor="@color/dark_maroon"
                android:textSize="16sp"
                android:textAllCaps="false"
                tools:ignore="UsingOnClickInXml"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/divider_1"
            android:src="@drawable/divider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/active_user" />
        <TextView
            android:id="@+id/about_me_title"
            android:text="@string/about_me_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_1" />
        <TextView
            android:id="@+id/about_me"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/about_me_title" />
        <ImageView
            android:id="@+id/divider_2"
            android:src="@drawable/divider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/about_me" />
        <TextView
            android:id="@+id/my_dogs_title"
            android:text="@string/my_dogs_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_2" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dogs_recycler_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/my_dogs_title" />
        <ImageView
            android:id="@+id/divider_3"
            android:src="@drawable/divider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/dogs_recycler_view" />
        <TextView
            android:id="@+id/my_reviews_title"
            android:text="@string/my_reviews_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_3" />
        <LinearLayout
            android:id="@+id/rating_layout"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_reviews_title">
            <TextView
                android:id="@+id/rating_title"
                android:text="@string/rating_title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviews_recycler_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rating_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>